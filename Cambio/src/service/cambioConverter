import axios from 'axios';

// Função para buscar a cotação das moedas na API
async function getCotacao(moedas: string): Promise<any> {
    try {
        const response = await axios.get(`https://economia.awesomeapi.com.br/json/last/${moedas}`);
        return response.data;
    } catch (error) {
        console.error('Erro ao obter cotação das moedas:', error);
        return null;
    }
}
